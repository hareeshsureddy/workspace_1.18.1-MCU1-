#ifndef INC_STM32F407XX_SPI_DRIVER_H_
#define INC_STM32F407XX_SPI_DRIVER_H_
/*SPI User configurable parameters structure*/
typedef struct {
	uint8_t SPI_mode;	//Master or slave
	uint8_t	SPI_Speed;
	uint8_t SPI_com_type;		//Full duplex or half duplex or simple
	uint8_t	SPI_CPOL;
	uint8_t SPI_CPHA;
	uint8_t SPI_SSM
};
/* SPI Handle structure*/
typedef struct{
	SPI_config_t SPI_Confg_data;
	SPIx_RegDef_t *pSPIx;
};

#endif /* INC_STM32F407XX_SPI_DRIVER_H_ */
